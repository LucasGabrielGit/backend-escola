{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "never"
        ],
        "comma-dangle": [
            2,
            "never"
        ],
        "no-console": "off",
        "eqeqeq": "error"
    }
}